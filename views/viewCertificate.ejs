</body>

<script>
  let count = 0;
  function change(params) {
    count++;
    if (count > 2){
      return;
    }

    let table = document.getElementById("tab");
    table.innerHTML += ` <tr>
        <td style="text-align: left; border: 1px solid black;font-weight: bold;"><%=record.attr1key%></td>
        <td style="text-align: left; border: 1px solid black;"> <%=record.attr1value %></td>
        <td style="text-align: left; border: 1px solid black;"><%=record.attr1range %></td>
      </tr>
      <tr>
        <td style="text-align: left; border: 1px solid black;font-weight: bold;"><%=record.attr2key%></td>
        <td style="text-align: left; border: 1px solid black;"> <%=record.attr2value %></td>
        <td style="text-align: left; border: 1px solid black;"> <%=record.attr2range %></td>
      </tr>

      <tr>`
        
  }

  change(1);
</script>

</html>